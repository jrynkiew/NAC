FROM ubuntu:22.04

WORKDIR /build

ARG CMAKE_VERSION=3.24.1
ARG GLFW_VERSION=3.3.8
ARG SDL_VERSION=2.26.2
ARG NVCC_VERSION=11.7.1
ARG GOSU_VERSION=1.7

SHELL [ "/bin/bash", "-c" ]

RUN set -ex \
    \
    && apt-get update \
    && DEBIAN_FRONTEND=noninteractive apt-get upgrade --no-install-recommends -y \
    && DEBIAN_FRONTEND=noninteractive apt-get install --no-install-recommends -y \
        ca-certificates \
        gcc \
        g++ \
        zlib1g-dev \
        libssl-dev \
        libgmp-dev \
        libmpfr-dev \
        libmpc-dev \
        libisl-dev \
        libdrm-dev \
        libxrandr-dev \
        libxinerama-dev \
        libxcursor-dev \
        libxi-dev \
        libgl1-mesa-dev \
        libssl3 \
        libgmp10 \
        libmpfr6 \
        libmpc3 \
        libisl23 \
        xz-utils \
        ninja-build \
        texinfo \
        meson \
        gnupg \
        bzip2 \
        patch \
        gperf \
        bison \
        file \
        flex \
        make \
        yasm \
        wget \
        zip \
        unzip \
        git \
        busybox \
        python3 \
        python2 \
        python-is-python3 \
        pip \
        glslang-tools \
        python3-glad \
        default-jre \
        pkg-config \
        jq \
        curl \
        openssh-server \
    \ 
    && wget -q https://github.com/Kitware/CMake/releases/download/v${CMAKE_VERSION}/cmake-${CMAKE_VERSION}.tar.gz -O - | tar -xz \
    && wget -q https://github.com/glfw/glfw/releases/download/${GLFW_VERSION}/glfw-${GLFW_VERSION}.zip -O - | busybox unzip - \
    && wget -q https://github.com/libsdl-org/SDL/releases/download/release-${SDL_VERSION}/SDL2-devel-${SDL_VERSION}-mingw.tar.gz -O - | tar -xz \
    && git clone https://github.com/skaslev/gl3w.git gl3w \
    && git clone https://github.com/nigels-com/glew.git \
    && wget -O /usr/local/bin/gosu https://github.com/tianon/gosu/releases/download/${GOSU_VERSION}/gosu-$(dpkg --print-architecture) \
    \
    && pip3 install mako \
    \
    && mkdir glad \
    && cd glad \
    && glad --profile=core --api="gl=3.3" --out-path=. --generator=c --spec=gl \
    && cp -r ./include/* /usr/include/ \
    && mkdir /usr/share/glad \
    && cp src/glad.c /usr/share/glad/glad.c \
    && cd .. \
    \
    && cd cmake-${CMAKE_VERSION} \
    && ./configure \
        --prefix=/usr/local \
        --parallel=`nproc` \
    && make -j`nproc` \
    && make install \
    && cd .. \
    && cd glfw-${GLFW_VERSION} \
    && cmake . \
    && make -j`nproc` \
    && make install \
    && cd .. \
    \
    && cd SDL2-${SDL_VERSION} \
    && make native \
    && cd .. \
    \
    && cd gl3w \
    && python3 gl3w_gen.py \
    && cmake . \
        -DOpenGL_GL_PREFERENCE=LEGACY \
    && make -j`nproc` \
    && make install \
    && cd .. \
    \
    && cd glew/auto \
    && make \
    && cd ../build/cmake \
    && cmake . \
    && make -j`nproc` \
    && make install \
    && cd ../../../ \
    \
    && rm -r SDL2-${SDL_VERSION} \
    && rm -r gl3w \
    && rm -r glfw-${GLFW_VERSION} \
    && rm -r glew \
    && rm -r cmake-${CMAKE_VERSION} \
    && rm -r glad \
    \
    && apt-get remove --purge -y \
        xz-utils \
        ninja-build \
        gperf \
        file \
        git \
        python3 \
        python3-glad \
        python2 \
        glslang-tools \
        python-is-python3 \
        pip \
        zip \
        wget \
        yasm \
        flex \
        bison \
        meson \
        patch \
        bzip2 \
        gnupg \
        texinfo \
        gcc \
        busybox \
        unzip \
        g++ \
        zlib1g-dev \
        libssl-dev \
        libgmp-dev \
        libmpfr-dev \
        libmpc-dev \
        libisl-dev \
    \
    && apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2204/x86_64/3bf863cc.pub \
    && echo "deb https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2204/x86_64/ /" > /etc/apt/sources.list.d/cuda.list \
    && apt-get update \
    \
    && DEBIAN_FRONTEND=noninteractive apt-get install --no-install-recommends -y \
        cuda-nvcc-${NVCC_VERSION:0:2}-${NVCC_VERSION:3:1} \
    \
    && ln -s /usr/bin/gcc /usr/local/cuda/bin/gcc \
    && ln -s /usr/bin/g++ /usr/local/cuda/bin/g++ \
    \
    && apt-get remove --purge -y gnupg \
    && apt-get autoremove --purge -y \
    && apt-get clean \
    \
    && useradd -rm -d /home/nac/ -s /bin/bash -g root -G sudo -u 1001 nac \
    \
    && mkdir -p /home/nac/.ssh/ \
    && mkdir -p /run/sshd \
    \
    && touch /home/nac/.ssh/authorized_keys \
    && touch /home/nac/.ssh/id_ed25519.pub \
    && touch /home/nac/.ssh/id_ed25519 \
    && touch /home/nac/.ssh/config \
    \
    && chmod +x /usr/local/bin/gosu \
    && chmod -R 600 /home/nac/.ssh/* \
    && chown -R nac /home/nac/.ssh/     

WORKDIR /scripts/

COPY ./entrypoint.sh /startup/entrypoint.sh
ENTRYPOINT ["/startup/entrypoint.sh"]

EXPOSE 22
CMD ["/bin/bash"]